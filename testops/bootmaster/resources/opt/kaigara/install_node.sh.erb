#!/bin/bash

set -xe

mkdir -p <%= OS_PATH %>
apt-get install debootstrap

debootstrap <%= OS_VERSION %> <%= OS_PATH %>
cp /etc/apt/sources.list <%= OS_PATH %>/etc/apt/
cp <%= KAI_HOME %>/resources/root/fstab <%= OS_PATH %>/etc

mount --bind /dev <%= OS_PATH %>/dev
mount --bind /dev/pts <%= OS_PATH %>/dev/pts
mount -t proc proc <%= OS_PATH %>/proc
mount -t sysfs sys <%= OS_PATH %>/sys

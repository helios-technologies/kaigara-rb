Vagrant.configure(2) do |config|
  config.vm.box = "ubuntu/trusty64"

  config.vm.provider "virtualbox" do |vb|
    vb.cpus = "2"
    vb.memory = "2048"
  end

  <% if @project_name -%>
  config.vm.hostname = "<%= @project_name -%>"
  <%- else -%>
  config.vm.hostname = "vm"
  <%- end -%>

  config.vm.provision :kaigara
end
